<%
  id ||= false
  heading_level ||= 1
  heading_level_tag = "h#{heading_level}" if [1,2,3,4,5,6].include? heading_level
  mobile_top_margin ||= false
  padding ||= false
  margin_bottom ||= false

  additional_classes = ""
  additional_classes << " gem-c-heading--mobile-top-margin" if mobile_top_margin
  additional_classes << " gem-c-heading--padding" if padding
  additional_classes << " gem-c-heading--margin-bottom-#{margin_bottom}" if [2,4].include? margin_bottom
%>
<%= content_tag(heading_level_tag, text,
    class: "gem-c-heading #{additional_classes}",
    id: (id if id)
) %>
